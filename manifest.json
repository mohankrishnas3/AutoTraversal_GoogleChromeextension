{
	"name":"auto traversal ",
	"description":"A Chrome extension That does auto traversal",
	"version":"1.0",
	"manifest_version":3,

	"action":{
		"default_popup":"index.html",
		"default_icons":{
		"16":"icons/icons8-comments-64.png",
		"32":"icons/icons8-comments-64.png",
		"128":"icons/icons8-comments-64.png"
}
	},
	"permissions": [
		"activeTab",
		"tabs",
		"scripting",
		"storage",
		"identity",
		"cookies"
	],
	"content_scripts":[{
		 "matches": ["https://*.google.com/*"],
		"run":"document_idle",
		"css":["comment.css"],
		"js":["content.js"]
	}],
	"background":[{
		"service_worker":["background.js"]
	}],
	"icons":{
		"16":"icons/icons8-comments-64.png",
		"32":"icons/icons8-comments-64.png",
		"128":"icons/icons8-comments-64.png"
	},
	"oauth2": {
    "client_id": "806467932016-53s4h087hld6tq4k8gamdhuu2fmgtpmk.apps.googleusercontent.com",
    "scopes":["https://www.googleapis.com/auth/contacts.readonly", 

            "https://www.googleapis.com/auth/drive.readonly",
            "https://www.googleapis.com/auth/drive.file",
            "https://www.googleapis.com/auth/drive"

    ]
  }
}
